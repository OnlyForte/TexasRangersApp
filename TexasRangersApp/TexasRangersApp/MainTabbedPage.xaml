<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TexasRangersApp.MainTabbedPage">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Menu" BackgroundColor="Gray">
        <StackLayout>
            <Frame BackgroundColor="Gray" VerticalOptions="CenterAndExpand">
                <Image Source="TexasRangersIcon.png" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Frame>
            <Frame BackgroundColor="Red" CornerRadius="0">
                <Button x:Name="foodButton" Text="Food Menu" TextColor="White" FontSize="24" BackgroundColor="Transparent" Clicked="foodButton_Clicked" />
            </Frame>
            <Frame BackgroundColor="Red" CornerRadius="0">
                <Button x:Name="drinksButton" Text="Drinks Menu" TextColor="White" FontSize="24" BackgroundColor="Transparent" Clicked="drinksButton_Clicked"/>
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Contact" >
        <StackLayout>
            <Label Text="The building is located at :"/>
            <Label Text="131 Queen Street, Auckland CBD, Auckland 1010"/>
            <Label Text="You can contact us by emailing texasrangers@gmail.com"/>
            <Image Source="TexasRangersBar.png" VerticalOptions="Center" HorizontalOptions="Center"/>
            <WebView x:Name="mapWebView" Source="https://mobile.here.com/p/h-%253D%253D?msg=Centre%20Court%20Queen%20St" VerticalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Reservations">
        <Button x:Name="reservationMainPageButton" Text="Reservation Menu" TextColor="White" FontSize="24" BackgroundColor="Transparent"/>
    </ContentPage>
</TabbedPage>